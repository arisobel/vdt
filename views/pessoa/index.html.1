                   </div>
                </div>
{{=form.custom.submit}}
{{=form.custom.end}}
{{#=presenca_mes}}
{{# =dic_presenca}}

<div class="row">
    <div class="col-md-7">
        <select id="ano">
        {{ for ano in anos:}}
            {{ if ano == year: }}
            <option selected>{{=ano}}</option>
            {{ else:}}
            <option>{{=ano}}</option>
            {{ pass }}
        {{ pass }}
        </select>
       {{ clas_btn = "btn-outline-info" }}
       {{ for i in range(1,13):}}
            {{ if i == month:}}
                {{ clas_btn = "btn-info" }}
            {{ else: }}
                {{ clas_btn = "btn-outline-info" }}
            {{ pass }}
            <span class="{{='btn mes {}'.format(clas_btn)}}" data-mes="{{=i}}">{{=os_meses.get(i,"-")}}</span>
        {{ pass }}
        <div id="tbl_claend">
            {{=LOAD('pessoa','calend', args=[id_pess,year, month], target='tbl_calend') }}
        </div>
    </div>
</div>

<script>
    $(".mes").on("click", function(){
        
        var mes = $(this).attr("data-mes");
        carrega_calend(mes);
      })
    
    $("#ano").on("change", function(){
        var ano = $(this).val();
        carrega_calend(mes);
      })
    
   function carrega_calend(mes){
        var id_pes = "{{=id_pess}}"
        var ano = $("#ano").val();
        alert("O mes Ã© " + mes + ", id_pess " + id_pes + ", ano " + ano);
   }

</script>
