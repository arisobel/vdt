{{extend 'bs4_carrousel.html'}}

  {{block carousel}}
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      
      {{for i in range(len(crs)):}}
        {{if i ==0:}}
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        {{else:}}
          <li data-target="#myCarousel" data-slide-to="{{=i}}"></li>
        {{pass}}

      {{pass}}
    </ol>
    <div class="carousel-inner">
      {{loops_cr=0}}
      {{ for c in crs:}}
        
      <div class="carousel-item {{='active' if loops_cr==0 else''}}">
        
        {{if c.imagem:}}
           <img src="{{=URL('default','download', args=c.imagem)}}" class="bd-placeholder-img" width="100%" height="100%" alt="Italian Trulli" role="img" >
        
        {{else:}}
           <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" role="img" aria-label=" :  " preserveAspectRatio="xMidYMid slice" focusable="false"><title> </title><rect width="100%" height="100%" fill="#777"/><text x="50%" y="50%" fill="#777" dy=".3em"> </text></svg>  

        {{pass}}

        <div class="container">
          {{if c.texto_escuro :}}
              <div class="carousel-caption carousel-dark-text text-left">
          {{else:}}
              <div class="carousel-caption text-left">
          {{pass}}
            <h1>{{=c.titulo}}</h1>
            <p>{{=c.texto}}</p>
            <p><a class="btn btn-lg btn-primary" href="#">Sign up today</a></p>
          </div>
        </div>
      </div>
        {{loops_cr+=1}}
      {{pass}}
    </div>
    <button class="carousel-control-prev carousel-control" type="button" data-target="#myCarousel" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next carousel-control" type="button" data-target="#myCarousel" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </button>
  </div>
  {{ end }}



